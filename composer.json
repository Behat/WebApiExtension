{
    "name": "keyclic/web-api-extension",
    "type": "behat-extension",
    "description": "Web API extension for Behat.",
    "keywords": ["api", "test"],
    "homepage": "http://extensions.behat.org",
    "license": "MIT",
    "authors": [{
        "name": "Christophe Coevoet",
        "email": "stof@notk.org"
    }, {
        "name": "Keyclic Team",
        "email": "techies@keyclic.com"
    }, {
        "name": "Community contributors",
        "homepage": "https://github.com/Keyclic/WebApiExtension/graphs/contributors"
    }],
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "behat/behat": "^3.4",
        "guzzlehttp/guzzle": "^6.3",
        "phpunit/phpunit": "^6.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "@stable",
        "symfony/console": "^4.3",
        "symfony/dotenv": "^4.3",
        "symfony/flex": "^1.2",
        "symfony/framework-bundle": "^4.3",
        "symfony/web-server-bundle": "^4.3",
        "symfony/yaml": "^4.3"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Behat\\WebApiExtension\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Client\\": "client/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "php-cs-fixer": [
            "vendor/bin/php-cs-fixer fix config",
            "vendor/bin/php-cs-fixer fix features",
            "vendor/bin/php-cs-fixer fix src",
            "vendor/bin/php-cs-fixer fix tests"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "test": [
            "vendor/bin/behat -fprogress --strict --lang=en"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    }
}
